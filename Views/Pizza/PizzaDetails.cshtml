@model PizzaModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Pizza</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.ImgSource" alt="Immagine @Model.Name">
            </div>
            <p>
                <strong>Nome:</strong>
                @Model.Name
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Description
            </p>

            <p>
            <strong>Categoria:</strong>
            @if (Model.Category != null)
            {
                @Model.Category.Type
            }
            else
            {
                <span>Nessuna categoria assocciata</span>
            }
            </p>

        </div>
    </div>
</div>