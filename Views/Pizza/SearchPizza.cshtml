@model List<PizzaModel>

@if (Model.Count == 0)
{
    <h3>Non ho trovato niente che corrisponde a "@ViewData["titleKeyword"]"</h3>
}
else
{
    <ol>

        @foreach (PizzaModel pizza in Model)
        {
            <div class="col-md-6">
                <div class="card mb-3" style="max-width: 540px; background-color:#FAEBD7">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@pizza.ImgSource" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@pizza.Name</h5>
                                <p class="card-text">@pizza.Description</p>
                                <span class="card-text"><small class="text-body-secondary">@pizza.Price.ToString() €</small></span>
                                <button type="button" class="btn btn-secondary btn-sm p-1">Comprami!</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </ol>
}

